.row
  .col-md-4.col-md-offset-4.col-sm-10.col-sm-offset-1
    %br/
    %br/
    .panel.panel-default
      .panel-body.login-panel
        %h2 Ingreso al sistema
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email, 'Correo electrónico'
            %br/
            = f.email_field :email, autofocus: true, placeholder: "Ingrese correo electrónico", class: 'form-control'
          .form-group
            = f.label :password, 'Contraseña'
            %br/
            = f.password_field :password, autocomplete: "off", class: 'form-control'

          %br/
          - if devise_mapping.rememberable?
            .form-group
              = f.check_box :remember_me
              = f.label :remember_me, 'Recordarme'
              = f.submit "Ingresar", class: 'btn btn-primary pull-right'
        %br/
        = render "devise/shared/links"
