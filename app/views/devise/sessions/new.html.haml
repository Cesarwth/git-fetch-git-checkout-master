!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "https://www.w3schools.com/w3css/4/w3.css", :rel => "stylesheet"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Raleway", :rel => "stylesheet"}/
    :css
       body,h1 {font-family: "Raleway", sans-serif}
       body, html {height: 100%}
       .bgimg {
          background-image: url('/apartmentDif.jpg');
          min-height: 100%;
          background-position: center;
          background-size: cover;
      }

      .imag{
          background-image: url('/assets/urbterranova.png');
      }

      .letras{
          color: black;
      }
  %body
    .bgimg.w3-display-container.w3-animate-opacity.w3-text-white
      .w3-display-topleft.w3-padding-large.w3-xlarge
        TERRANOVA
      .w3-display-middle
        .row
      .col-md-4.col-md-offset-4.col-sm-10.col-sm-offset-1
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        %br/
        .panel.panel-default
          .panel-body.login-panel
            %h2.letras Ingreso al sistema
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              = devise_error_messages!
              .form-group.letras
                = f.label :email, 'Correo electrónico'
                %br/
                = f.email_field :email, autofocus: true, placeholder: "Ingrese correo electrónico", class: 'form-control'
              .form-group.letras
                = f.label :password, 'Contraseña'
                %br/
                = f.password_field :password, autocomplete: "off", class: 'form-control'

              %br/
              - if devise_mapping.rememberable?
                .form-group.letras
                  = f.check_box :remember_me
                  = f.label :remember_me, 'Recordarme'
                  %br/
                  .panel.panel-default
                  = f.submit "Ingresar", class: 'btn btn-primary'
            %br/
            = render "devise/shared/links"
