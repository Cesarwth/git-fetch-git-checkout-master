<div align="center" class="container infoGrape" style="width: 100%">
  <h1>Imágenes Rotativas</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="container divLogin">

  <div class="form-group" align="center">
    <label for="name" class="cols-sm-2 control-label">Posición: </label>
    <%= @rotating_image.position %>
  </div>

  <div class="form-group" align="center">
    <label for="name" class="cols-sm-2 control-label">Descripción</label>
    <div class="cols-sm-10">
      <div class="input-group">
        <%= @rotating_image.name %>
      </div>
    </div>
  </div>

  <div class="form-group" align="center">
    <label for="name" class="cols-sm-2 control-label">Imagen</label>
    <div class="cols-sm-10">
      <div class="input-group">
        <% if @rotating_image.rotating_file %>
            <%= image_tag @rotating_image.rotating_file.url(:medium) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div align="center">
  <%= link_to 'Panel de Control' , manager_root_url, class: 'btn9 normal', style: 'color: white; text-decoration: none'%>
</div>

