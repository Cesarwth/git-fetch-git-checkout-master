<p id="notice"><%= notice %></p>

<h1>Categorías</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  <tr>
    <th>Título</th>
    <th>Descripción</th>
    <th>Posición</th>
    <th>Imagen</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>

      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td><%= category.position %></td>
        <td><%= category.image %></td>
        <td><%= link_to 'Ver', manager_category_path(category) %></td>
        <td><%= link_to 'Editar', edit_manager_category_path(category) %></td>
        <td><%= link_to 'Eliminar', manager_category_path(category), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva categoría', new_manager_category_path %>

