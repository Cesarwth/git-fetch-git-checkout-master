<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>

      <tr>
        <td><%= category.title %></td>
        <td><%= category.created_at %></td>
        <td><%= category.updated_at %></td>
        <td><%= link_to 'Show', manager_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_manager_category_path(category) %></td>
        <td><%= link_to 'Destroy', manager_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_manager_category_path %>

