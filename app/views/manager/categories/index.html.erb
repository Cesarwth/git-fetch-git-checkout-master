<h1>Categorías</h1>

<table class="table table-bordered table-responsive form-style-9">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  <tr class="form-style-9">
    <th>Título</th>
    <th>Descripción</th>
    <th>Posición</th>
    <th>Imagen</th>
  </tr>
  </thead>

  <tbody class="form-style-9">
  <% @categories.each do |category| %>

        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td><%= category.position %></td>
        <td>
          <% if category.image %>
              <%= image_tag category.image.url(:thumb) %>
          <% end %>
        </td>
        <td>
        <%= link_to 'Ver', manager_category_path(category), class: 'btn9 editar', style: 'color: white; text-decoration: none' %></td>
        </td>
        <td><%#= button_to 'Editar', edit_manager_category_path(category) %>
          <%= link_to 'Editar' ,edit_manager_category_path(category), class: 'btn9 normal', style: 'color: white; text-decoration: none',method: :get  %>
        </td>
        <%#=<td><%= link_to 'Eliminar', manager_category_path(category), method: :delete, data: { confirm: '¿Estás seguro?' } %><%#=</td>%>
      </tr>
  <% end %>
  </tbody>
</table>

