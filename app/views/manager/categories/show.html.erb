<div align="center" class="container infoNote" style="width: 100%">
  <h1>Categorías</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="form-style-9">

  <ul>
    <li>

      <%= label_tag(:label, "Título:") %>
      <%= @category.title %>
      <br></li>

      <li>
      <%= label_tag(:label, "Descripción:") %>
      <%= @category.description %>
        <br></li>

      <li>
        <%= label_tag(:label, "Posición:") %>
       <%= @category.position %>
      <br></li>


    <li>
      <%= label_tag(:label, "Imagen:") %>
      <% if @category.image %>
          <%= image_tag @category.image.url(:thumb) %>
      <% end %>
    </li>
  </ul>
</div>

<div align="center">
  <%= link_to 'Panel de control' , manager_root_url, class: 'btn9 normal', style: 'color: white; text-decoration: none'%>
<%= link_to 'Editar' ,edit_manager_category_path, class: 'btn9 editar', style: 'color: white; text-decoration: none'%>
</div>