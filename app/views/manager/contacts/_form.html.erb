<%= form_for([:manager, @contact])do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> Contacto no se puede guardar:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="container divLogin">

    <div class="form-group">
      <label for="name" class="cols-sm-2 control-label">Dirección</label>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-map-marker" aria-hidden="true"></i></span>
          <%= form.text_field :address ,required: true%>
        </div>
      </div>
    </div>

      <div class="form-group">
        <label for="name" class="cols-sm-2 control-label">Teléfono</label>
        <div class="cols-sm-10">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
            <%= form.text_field :phone ,required: true%>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="name" class="cols-sm-2 control-label">Correo Electrónico</label>
        <div class="cols-sm-10">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
            <%= form.text_field :email ,required: true%>
          </div>
        </div>
      </div>

      <div align="center">
        <%= form.submit 'Actualizar' , :class => 'btn9 editar', :style => 'color: white; text-decoration: none' %>
      </div>


  </div>
<% end %>
